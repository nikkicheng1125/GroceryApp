<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_border"
    android:padding="10dp">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/image_view_product"
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/text_view_productname"
        android:layout_toEndOf="@id/image_view_product"
        android:layout_marginStart="10dp"
        android:text="Product Name"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_unit"
        android:layout_below="@id/text_view_productname"
        android:layout_toEndOf="@id/image_view_product"
        android:layout_marginStart="10dp"
        android:text="Unit"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_mrp"
        android:layout_alignBottom="@id/image_view_product"
        android:layout_toEndOf="@id/image_view_product"
        android:layout_marginStart="10dp"
        android:text="Mrp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_price"
        android:layout_alignBottom="@id/image_view_product"
        android:layout_toEndOf="@id/text_view_mrp"
        android:layout_marginStart="10dp"
        android:text="Price"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_minus"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:backgroundTint="@color/white"
        android:layout_alignBottom="@id/image_view_product"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-5dp"
        android:layout_toStartOf="@id/text_view_quantity"
        android:text="-"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_view_product"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@id/button_plus"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/image_view_product"
        android:layout_marginBottom="-5dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/white"
        android:text="+"
        android:textStyle="bold"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button_tocart"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:backgroundTint="@color/teal_700"
        android:layout_alignBottom="@id/image_view_product"
        android:layout_marginBottom="-5dp"
        android:text="Add to cart"
        android:textColor="@color/white"
        android:textAllCaps="false"/>


</RelativeLayout>