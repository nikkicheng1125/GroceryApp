<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="10dp">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/image_view_product"
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/text_view_productname"
        android:layout_toEndOf="@id/image_view_product"
        android:layout_marginStart="10dp"
        android:text="Product Name"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_mrp"
        android:layout_alignBottom="@id/image_view_product"
        android:layout_toEndOf="@id/image_view_product"
        android:layout_marginStart="10dp"
        android:text="Mrp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_price"
        android:layout_alignBottom="@id/image_view_product"
        android:layout_toEndOf="@id/text_view_mrp"
        android:layout_marginStart="10dp"
        android:text="Price"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:1"
        android:layout_alignBottom="@id/image_view_product"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_below="@id/image_view_product"
        android:text="________________________________________________________"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="17dp"/>






</RelativeLayout>